<!doctype html>
<html>
  <head>
    <title>Opus</title>
    <link rel="stylesheet" href="stylesheets/jquery-ui.CSS"/>
    <link rel="stylesheet" href="stylesheets/bootstrap-datepicker3.standalone.min.css"/>
    <script src="javascripts/lib/jquery-3.4.1.min.js" type="text/javascript"></script>
    <script src="javascripts/lib/jquery-ui.min.js"></script>
    <script src="javascripts/lib/bootstrap-datepicker.min.js" type="text/javascript"></script>
    <script src="javascripts/lib/bootstrap-datepicker.pt-BR.min.js" type="text/javascript"></script>
    <script src="javascripts/lib/bootstrap.min.js" type="text/javascript"></script>
    <script src="javascripts/lib/ejs.js" type="text/javascript"></script>
    <link rel="stylesheet" href="stylesheets/agendamentos.css">
    <link rel="shortcut icon" href="images/icone.ico" />
    <script src="javascripts/agendamentos.js" type="text/javascript"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  </head>
  <body>

    <%- include partials/navigation.ejs %>
    
    <div class="conteudo-container">
      <% if (agendamentos.filter((agendamento) => agendamento.status === 0).length) { %>
      <span class="conteudo-titulo" id="pendentes-titulo">Pendentes</span>
      <div class="agendamentos-pendentes-container">
        
        <% agendamentos.forEach(function(agendamento){ %>
          <% if (agendamento.status === 0) { %>
              <%- include partials/agendamento_pendente.ejs %>
          <%} %>
        <%}) %>

      </div>
      <% } %>

      <% if (agendamentos.filter((agendamento) => agendamento.status === 1).length) { %>
      <span class="conteudo-titulo" id="proximos-titulo">Pr√≥ximos</span>
      <div class="agendamentos-proximos-container">
        <div class="proximos-container-fluid">

        <% agendamentos.forEach(function(agendamento){ %>
          <% if (agendamento.status === 1) { %>
              <%- include partials/agendamento_proximo.ejs %>
          <%} %>
        <%}) %>

        </div>
      </div>
      <% } %>

    </div>

  </body>
</html>
